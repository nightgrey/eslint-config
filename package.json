{
  "name": "@nightgrey/eslint-config",
  "repository": {
    "url": "https://github.com/nightgrey/eslint-config",
    "type": "git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run test:lint",
    "test:lint": "eslint packages",
    "release": "changeset publish",
    "changeset": "changeset",
    "pkgJsons": "tsx scripts/maintain.ts"
  },
  "engines": {
    "npm": ">= 9",
    "node": ">= 18"
  },
  "workspaces": [
    "scripts",
    "packages/config",
    "packages/utils",
    "packages/addons/*",
    "packages/bases/*",
    "packages/overrides/*"
  ],
  "packageManager": "npm@9.4.0",
  "devDependencies": {
    "@nightgrey/eslint-config": "*",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/eslint": "^8.37.0",
    "globals": "^13.20.0"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1"
  }
}
