{
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run test:lint",
    "test:lint": "eslint packages",
    "test:lint:fix": "npm run prettier && eslint --fix packages",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "release": "changeset publish",
    "changeset": "changeset",
    "maintain": "tsx scripts/maintain.ts && npm run test:lint:fix"
  },
  "workspaces": [
    "scripts",
    "packages/config",
    "packages/utils",
    "packages/addons/*",
    "packages/bases/*",
    "packages/overrides/*"
  ],
  "devDependencies": {
    "@nightgrey/eslint-config": "1.0.0-alpha.0",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/eslint": "^8.37.0",
    "globals": "^13.20.0"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1"
  },
  "name": "@nightgrey/eslint-config",
  "engines": {
    "npm": ">= 9",
    "node": ">= 18"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-nightgrey",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/nightgrey/eslint-config",
    "directory": ".",
    "type": "git"
  }
}
